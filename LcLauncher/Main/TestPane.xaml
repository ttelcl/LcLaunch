<UserControl
    x:Class="LcLauncher.Main.TestPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:LcLauncher.Main"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    mc:Ignorable="d" 
    d:DataContext="{d:DesignInstance local:TestPaneViewModel, IsDesignTimeCreatable=False}"
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Underlay text -->
        <TextBlock
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Text="Development Temporary Interface"
            Foreground="#440000FF"
            FontSize="48"
            />
        <!-- Main Content -->
        <Border
            Height="150"
            BorderThickness="1"
            Margin="2" Padding="2"
            BorderBrush="Blue">
            <DockPanel>
                <WrapPanel DockPanel.Dock="Left" Orientation="Vertical">
                    <Button Content="Next Icon Job" 
                            Command="{Binding Host.ProcessNextIconJobCommand}"/>
                    <Button Content="Application Folder test" 
                            Command="{Binding TestApplicationShellFolderCommand}"/>
                    <Button Content="Test Editor"
                            Command="{Binding TestEditorCommand}"/>
                </WrapPanel>
                <DockPanel DockPanel.Dock="Top">
                    <Button
                        DockPanel.Dock="Left"
                        Content="Open Icon File..."
                        Command="{Binding OpenIconFileCommand}"/>
                    <TextBox
                        Text="{Binding IconFile, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                        IsReadOnly="False"
                        mah:TextBoxHelper.Watermark="icon file"/>
                </DockPanel>
                <Border
                    BorderThickness="1"
                    BorderBrush="Blue"
                    Margin="1" Padding="5,1">
                    <StackPanel Orientation="Horizontal">
                        <Border
                            VerticalAlignment="Center"
                            Margin="10,0"
                            BorderThickness="0"
                            BorderBrush="Blue"
                            Height="96"
                            Width="96">
                            <Grid>
                                <iconPacks:PackIconMaterial
                                    Height="96" Width="96"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="#FF6D8764"
                                    Kind="Circle"/>
                                <iconPacks:PackIconMaterial
                                    Height="64" Width="64"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="#FFDD66"
                                    RotationAngle="315"
                                    Kind="RocketLaunchOutline"/>
                            </Grid>
                        </Border>
                        <Border
                            VerticalAlignment="Center"
                            BorderThickness="0"
                            BorderBrush="Blue"
                            Margin="10,0"
                            Height="48"
                            Width="48">
                            <Grid>
                                <iconPacks:PackIconMaterial
                                    Height="48" Width="48"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="#FF6D8764"
                                    Kind="Circle"/>
                                <iconPacks:PackIconMaterial
                                    Height="32" Width="32"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="#FFDD66"
                                    RotationAngle="315"
                                    Kind="RocketLaunchOutline"/>
                            </Grid>
                        </Border>
                        <Border
                            VerticalAlignment="Center"
                            BorderThickness="0"
                            BorderBrush="Blue"
                            Margin="10,0"
                            Height="32"
                            Width="32">
                            <Grid>
                                <iconPacks:PackIconMaterial
                                    Height="32" Width="32"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="#FF6D8764"
                                    Kind="Circle"/>
                                <iconPacks:PackIconMaterial
                                    Height="21" Width="21"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="#FFDD66"
                                    RotationAngle="315"
                                    Kind="RocketLaunchOutline"/>
                            </Grid>
                        </Border>
                        <Border
                            VerticalAlignment="Center"
                            BorderThickness="0"
                            BorderBrush="Blue"
                            Margin="10,0"
                            Height="16"
                            Width="16">
                            <Grid
                                Background="#FF6D8764">
                                <!--<iconPacks:PackIconMaterial
                                    Height="16" Width="16"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="{DynamicResource MahApps.Brushes.AccentBase}"
                                    Kind="Circle"/>-->
                                <iconPacks:PackIconMaterial
                                    Height="16" Width="16"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="#FFDD66"
                                    RotationAngle="270"
                                    Kind="RocketLaunchOutline"/>
                            </Grid>
                        </Border>
                        <Border
                            VerticalAlignment="Center"
                            BorderThickness="0"
                            BorderBrush="Blue"
                            Margin="10,0"
                            Height="24"
                            Width="24">
                            <Grid>
                                <iconPacks:PackIconMaterial
                                    Height="24" Width="24"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="#FF6D8764"
                                    Kind="Circle"/>
                                <iconPacks:PackIconMaterial
                                    Height="16" Width="16"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="#FFDD66"
                                    RotationAngle="315"
                                    Kind="RocketLaunchOutline"/>
                            </Grid>
                        </Border>
                        <Image
                            Source="{Binding IconSmall}"
                            Stretch="None"
                            Margin="5,0"/>
                        <Image
                            Source="{Binding IconMedium}"
                            Stretch="None"
                            Margin="5,0"/>
                        <Image
                            Source="{Binding IconLarge}"
                            Stretch="None"
                            Margin="5,0"/>
                        <Image
                            Source="{Binding IconSmallFixed}"
                            Stretch="UniformToFill"
                            Width="16" Height="16"
                            Margin="5,0"/>
                        <Image
                            Source="{Binding IconMediumFixed}"
                            Stretch="UniformToFill"
                            Width="32" Height="32"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Margin="5,0"/>
                        <Image
                            Source="{Binding IconLargeFixed}"
                            Stretch="UniformToFill"
                            Width="48" Height="48"
                            RenderOptions.BitmapScalingMode="Fant"
                            Margin="5,0"/>
                    </StackPanel>
                </Border>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
