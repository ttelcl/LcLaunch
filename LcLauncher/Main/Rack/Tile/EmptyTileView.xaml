<UserControl
    x:Class="LcLauncher.Main.Rack.Tile.EmptyTileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:LcLauncher.Main.Rack.Tile"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    mc:Ignorable="d" 
    d:DataContext="{d:DesignInstance local:EmptyTileViewModel, IsDesignTimeCreatable=False}"
    d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem
                Header="Cut Tile"
                Command="{Binding Host.ToggleCutCommand}"
                IsChecked="{Binding Host.IsKeyTile}"/>
            <MenuItem
                Header="Insert cut Tile Here"
                IsEnabled="False"/>
            <MenuItem
                Header="Paste cut Tile Here"
                IsEnabled="False"/>
            <Separator/>
            <MenuItem
                Header="Add Tile Row"
                Command="{Binding Host.TileList.AddEmptyRowCommand}"/>
            <MenuItem
                Header="Remove Empty Tile Row"
                Command="{Binding Host.TileList.RemoveLastEmptyRowCommand}"/>
            <Separator/>
            <!--<MenuItem Header="Danger Zone">
                <MenuItem
                    Header="Delete (and replace with empty tile)"
                    IsEnabled="False"/>
            </MenuItem>-->
            <MenuItem
                Header="Delete Empty Tile"
                IsEnabled="False"/>
            <MenuItem
                Header="Bind to Application..."
                ToolTip="(from application list)"
                ToolTipService.ShowOnDisabled="True"
                IsEnabled="False"/>
            <MenuItem
                Header="Bind to Executable..."
                ToolTip="(from file system, allows for arguments and environment tweaks)"
                ToolTipService.ShowOnDisabled="True"
                IsEnabled="False"/>
            <MenuItem
                Header="Bind to Document or Shortcut..."
                ToolTip="(from file system, allows any file type)"
                ToolTipService.ShowOnDisabled="True"
                IsEnabled="False"/>
        </ContextMenu>
    </UserControl.ContextMenu>
    <Grid Background="#00000000">
        <!-- The background ensures that right clicks are caught here, not deeper -->
        <iconPacks:PackIconMaterial
            Kind="{Binding Icon}"
            Foreground="{DynamicResource MahApps.Brushes.Accent4}"
            Height="48" Width="48"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
    </Grid>
</UserControl>
