<UserControl
    x:Class="LcLauncher.Main.Rack.Tile.GroupIconView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:LcLauncher.Main.Rack.Tile"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    mc:Ignorable="d" 
    d:DataContext="{d:DesignInstance local:GroupIconViewModel, IsDesignTimeCreatable=False}"
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid
        Width="{StaticResource GroupTileIcon.Size.Outer}"
        Height="{StaticResource GroupTileIcon.Size.Outer}"
        >
        <iconPacks:PackIconMaterial
            Kind="{Binding PlainIcon}"
            Foreground="{DynamicResource MahApps.Brushes.Accent2}"
            Height="{StaticResource GroupTileIcon.Size.Inner}"
            Width="{StaticResource GroupTileIcon.Size.Inner}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{Binding IconAdapter.Icon, Converter={StaticResource VisibleIfNull}}"/>
        <Image
            Visibility="{Binding IconAdapter.Icon, Converter={StaticResource VisibleIfNotNull}}"
            Source="{Binding IconAdapter.Icon}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Stretch="None"/>
    </Grid>
</UserControl>
