<UserControl
    x:Class="LcLauncher.Main.Rack.Tile.LaunchEditView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:LcLauncher.Main.Rack.Tile"
    mc:Ignorable="d" 
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    d:DataContext="{d:DesignInstance local:LaunchEditViewModel, IsDesignTimeCreatable=False}"
    d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer
        VerticalScrollBarVisibility="Auto"
        MinHeight="200"
        MaxHeight="500">
        <StackPanel
            Orientation="Vertical"
            Margin="0,0,0,0">
            <Grid MinHeight="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border
                    Padding="10,5"
                    BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                    BorderThickness="1">
                    <TextBlock
                        Text="Target"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Right"/>
                </Border>
                <DockPanel
                    Grid.Column="1"
                    Background="{DynamicResource MahApps.Brushes.Control.Background}">
                    <iconPacks:PackIconMaterial
                        DockPanel.Dock="Left"
                        Kind="{Binding ClassificationIcon}"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource MahApps.Brushes.AccentBase}"
                        Margin="4,0,0,0"/>
                    <TextBlock
                        DockPanel.Dock="Left"
                        Text="{Binding ClassificationText}"
                        Foreground="{DynamicResource MahApps.Brushes.AccentBase}"
                        FontStyle="Italic"
                        FontSize="12"
                        VerticalAlignment="Center"
                        Margin="3,0,4,0"/>
                    <TextBox
                        Text="{Binding Target, Mode=OneWay}"
                        IsReadOnly="True"
                        IsReadOnlyCaretVisible="True"
                        BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                        Foreground="{DynamicResource MahApps.Brushes.Gray5}"
                        Background="{DynamicResource MahApps.Brushes.Gray8}"
                        Padding="5,5"/>
                </DockPanel>
            </Grid>

            <!--<Grid MinHeight="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border
                    Padding="10,5"
                    BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                    BorderThickness="1">
                    <TextBlock
                        Text="Launch type"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Right"
                        FontStyle="Italic"/>
                </Border>
                <Border
                    Grid.Column="1"
                    Padding="10,5"
                    BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                    BorderThickness="1">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial
                            Kind="{Binding ClassificationIcon}"
                            VerticalAlignment="Center"
                            Foreground="#FFCCAA"
                            Margin="0,0,10,0"/>
                        <TextBlock
                            Text="{Binding ClassificationText}"
                            Foreground="#FFCCAA"
                            FontStyle="Italic"/>
                    </StackPanel>
                </Border>
            </Grid>-->

            <Grid MinHeight="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border
                    Padding="10,5"
                    BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                    BorderThickness="1">
                    <TextBlock
                        Text="Title"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Right"/>
                </Border>
                <TextBox
                    Grid.Column="1"
                    Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    mah:TextBoxHelper.Watermark="(optional - a default is used if left empty)"
                    BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                    Padding="5,5"/>
            </Grid>
            
            <Grid MinHeight="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border
                    Padding="10,5"
                    BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                    BorderThickness="1">
                    <TextBlock
                        Text="Tooltip"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Right"/>
                </Border>
                <TextBox
                    Grid.Column="1"
                    Text="{Binding Tooltip, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    mah:TextBoxHelper.Watermark="(optional - a default is used if left empty)"
                    BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                    Padding="5,5"/>
            </Grid>
            
            <Grid MinHeight="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border
                    Padding="10,5"
                    BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                    BorderThickness="1">
                    <TextBlock
                        Text="Working Directory"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Right"/>
                </Border>
                <DockPanel
                    Grid.Column="1">
                    <Button
                        DockPanel.Dock="Right"
                        Command="{Binding PickWorkingDirectoryCommand}"
                        Margin="5,0,0,0"
                        Width="30"
                        Height="30">
                        <iconPacks:PackIconMaterial Kind="Folder" Width="16" Height="16"/>
                    </Button>
                    <Button
                        DockPanel.Dock="Right"
                        Command="{Binding ClearWorkingDirectoryCommand}"
                        Margin="5,0,0,0"
                        Width="30"
                        Height="30">
                        <iconPacks:PackIconMaterial Kind="Close" Width="16" Height="16"/>
                    </Button>
                    <TextBox
                        Text="{Binding WorkingDirectory, Mode=OneWay}"
                        IsReadOnly="True"
                        IsReadOnlyCaretVisible="True"
                        mah:TextBoxHelper.Watermark="(optional - a default is used if left empty)"
                        BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                        Foreground="{DynamicResource MahApps.Brushes.Gray5}"
                        Background="{DynamicResource MahApps.Brushes.Gray8}"
                        Padding="5,5"/>
                </DockPanel>
            </Grid>
            
            <Grid MinHeight="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border
                    Padding="10,5"
                    BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                    BorderThickness="1">
                    <TextBlock
                        Text="Icon Override"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Right"/>
                </Border>
                <DockPanel
                    Grid.Column="1">
                    <Button
                        DockPanel.Dock="Right"
                        Command="{Binding PickIconCommand}"
                        Margin="5,0,0,0"
                        Width="30"
                        Height="30">
                        <iconPacks:PackIconMaterial Kind="Folder" Width="16" Height="16"/>
                    </Button>
                    <Button
                        DockPanel.Dock="Right"
                        Command="{Binding ClearIconCommand}"
                        Margin="5,0,0,0"
                        Width="30"
                        Height="30">
                        <iconPacks:PackIconMaterial Kind="Close" Width="16" Height="16"/>
                    </Button>
                    <TextBox
                        Text="{Binding IconSource, Mode=OneWay}"
                        IsReadOnly="True"
                        IsReadOnlyCaretVisible="True"
                        mah:TextBoxHelper.Watermark="File to derive icon from. Leave empty to use target."
                        BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                        Foreground="{DynamicResource MahApps.Brushes.Gray5}"
                        Background="{DynamicResource MahApps.Brushes.Gray8}"
                        Padding="5,5"/>
                </DockPanel>
            </Grid>
            
            <Grid MinHeight="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border
                    Padding="10,5"
                    BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                    BorderThickness="1">
                    <TextBlock
                        Text="Arguments"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Right"/>
                </Border>
                <Border
                    Grid.Column="1"
                    Padding="10,5"
                    BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                    BorderThickness="1">
                    <TextBlock
                        Text="Editing arguments not yet implemented. Edit the tiles-json file directly"
                        FontStyle="Italic"/>
                </Border>
            </Grid>
            
            <Grid MinHeight="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border
                    Padding="10,5"
                    BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                    BorderThickness="1">
                    <TextBlock
                        Text="Environment Variables"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Right"/>
                </Border>
                <Border
                    Grid.Column="1"
                    Padding="10,5"
                    BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                    BorderThickness="1">
                    <TextBlock
                        Text="Editing not yet implemented. Edit the tiles-json file directly to add, remove, or replace environment variables"
                        FontStyle="Italic"/>
                </Border>
            </Grid>
            
            <Grid MinHeight="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border
                    Padding="10,5"
                    BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                    BorderThickness="1">
                    <TextBlock
                        Text="Environment list edits"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Right"/>
                </Border>
                <Border
                    Grid.Column="1"
                    Padding="10,5"
                    BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                    BorderThickness="1">
                    <TextBlock
                        Text="Editing not yet implemented. Edit the tiles-json file directly to prepend or append items to PATH-like environment variables"
                        FontStyle="Italic"/>
                </Border>
            </Grid>
            
            <Grid MinHeight="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border
                    Padding="10,5"
                    BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                    BorderThickness="1">
                    <TextBlock
                        Text="Tiles list and index"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Right"
                        FontStyle="Italic"/>
                </Border>
                <Border
                    Grid.Column="1"
                    Padding="10,5"
                    BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                    BorderThickness="1">
                    <TextBlock
                        Text="{Binding TileHost}"
                        Foreground="#FFFFAA"
                        FontStyle="Italic"/>
                </Border>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</UserControl>
