<UserControl
    x:Class="LcLauncher.Main.Rack.ColumnView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:LcLauncher.Main.Rack"
    mc:Ignorable="d" 
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    d:DataContext="{d:DesignInstance local:ColumnViewModel, IsDesignTimeCreatable=False}"
    d:DesignHeight="450" d:DesignWidth="800"
    Margin="1,3"
    Background="{DynamicResource MahApps.Brushes.Control.Background}">
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Insert Marked Shelf Here"
                      Command="{Binding MoveMarkedShelfHereCommand}">
                <MenuItem.Icon>
                    <iconPacks:PackIconMaterial Kind="TrayArrowDown" Width="20" Height="20"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Create New Shelf Here"
                      Command="{Binding CreateNewShelfHereCommand}">
                <MenuItem.Icon>
                    <iconPacks:PackIconMaterial Kind="TrayPlus" Width="20" Height="20"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>
            <MenuItem Header="Append New Column"
                      Command="{Binding AddNewColumnCommand}">
                <MenuItem.Icon>
                    <iconPacks:PackIconMaterial Kind="TableColumnPlusAfter" Width="20" Height="20"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Delete this Empty Column"
                      Command="{Binding DeleteColumnCommand}">
                <MenuItem.Icon>
                    <iconPacks:PackIconMaterial
                        Kind="TableColumnRemove"
                        Foreground="#FFFF4444"
                        Width="20" Height="20"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </UserControl.ContextMenu>
    <DockPanel>
        <DockPanel
            Background="{DynamicResource MahApps.Brushes.Accent2}"
            DockPanel.Dock="Top">
            <Button
                DockPanel.Dock="Left"
                MinWidth="24" MinHeight="24"
                BorderThickness="0"
                Margin="10,0,0,0"
                Command="{Binding MoveLeftCommand}"
                Style="{DynamicResource MahApps.Styles.Button.Circle}">
                <iconPacks:PackIconMaterial
                    Kind="ArrowLeftBold"
                    Height="16" Width="16"/>
            </Button>
            <Button
                DockPanel.Dock="Right"
                MinWidth="24" MinHeight="24"
                BorderThickness="0"
                Margin="0,0,10,0"
                Command="{Binding MoveRightCommand}"
                Style="{DynamicResource MahApps.Styles.Button.Circle}">
                <iconPacks:PackIconMaterial
                    Kind="ArrowRightBold"
                    Height="16" Width="16"/>
            </Button>
            <Button
                DockPanel.Dock="Right"
                MinWidth="24" MinHeight="24"
                BorderThickness="0"
                Margin="0,0,10,0"
                Visibility="{Binding IsLast, Converter={StaticResource VisibleIf}}"
                ToolTip="Append new column"
                Command="{Binding AddNewColumnCommand}"
                Style="{DynamicResource MahApps.Styles.Button.Circle}">
                <iconPacks:PackIconMaterial
                    Kind="TableColumnPlusAfter"
                    Height="16" Width="16"/>
            </Button>
            <Grid/>
            <!--<TextBlock
                TextAlignment="Center"
                Text="{Binding Title}"/>-->
        </DockPanel>
        <ScrollViewer
            Width="425"
            HorizontalScrollBarVisibility="Hidden"
            VerticalScrollBarVisibility="Visible">
            <ScrollViewer.Resources>
                <!-- https://stackoverflow.com/a/50260778/271323 -->
                <!-- Plus checking the source for the right name. The default is 14. -->
                <sys:Double x:Key="MahApps.Sizes.ScrollBar.Width">10</sys:Double>
            </ScrollViewer.Resources>
            <StackPanel Orientation="Vertical" Width="415">
                <ItemsControl
                    ItemsSource="{Binding Shelves}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:ShelfView DataContext="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <!-- insert a small invisible box causing a gap after the last shelf
                        where another shelf can be moved or created, even if the column is 'full' -->
                <Border Height="30">
                </Border>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
