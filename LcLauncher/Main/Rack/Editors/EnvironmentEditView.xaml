<UserControl
    x:Class="LcLauncher.Main.Rack.Editors.EnvironmentEditView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:LcLauncher.Main.Rack.Editors"
    mc:Ignorable="d" 
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    d:DataContext="{d:DesignInstance local:EnvironmentEditViewModel, IsDesignTimeCreatable=False}"
    d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <ToggleButton
            DockPanel.Dock="Right"
            Margin="5,0,0,0"
            Style="{DynamicResource MahApps.Styles.ToggleButton}"
            IsChecked="{Binding IsEditing}"
            ToolTip="Edit environment variables"
            BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
            Foreground="{DynamicResource MahApps.Brushes.AccentBase}"
            Width="30"
            MinHeight="30">
            <iconPacks:PackIconMaterial
                Kind="TextBoxEditOutline"
                Width="16" Height="16"/>
        </ToggleButton>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border
                Padding="10,5"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                BorderThickness="1">
                <TextBlock
                    Text="Environment Variables"
                    TextWrapping="Wrap"
                    HorizontalAlignment="Right"/>
            </Border>
            <Border
                Visibility="{Binding IsEditing, Converter={StaticResource VisibleIfNot}}"
                Grid.Column="1"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                BorderThickness="1">
                <Grid>
                    <ItemsControl
                        Margin="5,5"
                        Visibility="{Binding IsEmpty, Converter={StaticResource VisibleIfNot}}"
                        ItemsSource="{Binding Environment}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Background="{DynamicResource MahApps.Brushes.Accent4}"
                                    Height="18" MinWidth="18" CornerRadius="8"
                                    Padding="8,0" Margin="2,2">
                                    <Grid>
                                        <TextBlock
                                            Visibility="{Binding Value, Converter={StaticResource VisibleIfNotNull}}"
                                            FontSize="12" FontWeight="DemiBold">
                                            <Run Text="{Binding Key, Mode=OneWay}"/>
                                            <Run Text=" = "/>
                                            <Run Text="{Binding Value, Mode=OneWay}"/>
                                        </TextBlock>
                                        <StackPanel
                                            Visibility="{Binding Value, Converter={StaticResource VisibleIfNull}}"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                Visibility="{Binding Value, Converter={StaticResource VisibleIfNull}}"
                                                FontSize="12" FontWeight="DemiBold">
                                                <Run Text="{Binding Key, Mode=OneWay}"/>
                                            </TextBlock>
                                            <iconPacks:PackIconMaterial
                                                Margin="10,2,2,2"
                                                Foreground="{DynamicResource MahApps.Brushes.AccentBase}"
                                                Width="12" Height="12"
                                                Kind="CloseThick" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock
                        Foreground="{DynamicResource MahApps.Brushes.Gray5}"
                        Background="{DynamicResource MahApps.Brushes.Gray8}"
                        Padding="5,5"
                        FontStyle="Italic"
                        TextAlignment="Right"
                        Text="Click the Edit Environment button to start adding environment variables --> "
                        Visibility="{Binding IsEmpty, Converter={StaticResource VisibleIf}}"/>
                </Grid>
            </Border>
            <Border
                Visibility="{Binding IsEditing, Converter={StaticResource VisibleIf}}"
                Grid.Column="1"
                Padding="5,5"
                Background="{DynamicResource MahApps.Brushes.Accent3}"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                BorderThickness="1">
                <StackPanel Orientation="Vertical">
                    <TextBlock
                        Margin="0,0,0,5"
                        Text="Enter environment bindings, one per line, in the form VARIABLE=value. Use an empty value to delete an environment variable"/>
                    <TextBox
                        MinLines="4"
                        MaxLines="10"
                        AcceptsReturn="True"
                        Text="{Binding EnvironmentAsLines, Mode=TwoWay}"/>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</UserControl>
