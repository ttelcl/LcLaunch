<UserControl
    x:Class="LcLauncher.Main.Rack.Editors.ArgumentEditView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:LcLauncher.Main.Rack.Editors"
    mc:Ignorable="d" 
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    d:DataContext="{d:DesignInstance local:ArgumentEditViewModel, IsDesignTimeCreatable=False}"
    d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <ToggleButton
            DockPanel.Dock="Right"
            Margin="5,0,0,0"
            Style="{DynamicResource MahApps.Styles.ToggleButton}"
            IsChecked="{Binding IsEditing}"
            ToolTip="Edit arguments"
            BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
            Foreground="{DynamicResource MahApps.Brushes.AccentBase}"
            Width="30"
            MinHeight="30">
            <iconPacks:PackIconMaterial
                Kind="TextBoxEditOutline"
                Width="16" Height="16"/>
        </ToggleButton>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border
                Padding="10,5"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                BorderThickness="1">
                <TextBlock
                    Text="Arguments"
                    TextWrapping="Wrap"
                    HorizontalAlignment="Right"/>
            </Border>
            <Border
                Visibility="{Binding IsEditing, Converter={StaticResource VisibleIfNot}}"
                Grid.Column="1"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                BorderThickness="1">
                <Grid>
                    <ItemsControl
                        Margin="5,5"
                        Visibility="{Binding HasArguments, Converter={StaticResource VisibleIf}}"
                        ItemsSource="{Binding Arguments}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Background="{DynamicResource MahApps.Brushes.Accent3}"
                                    Height="18" MinWidth="18" CornerRadius="8"
                                    Padding="8,0" Margin="2,2">
                                    <TextBlock
                                        Text="{Binding}"
                                        FontSize="12" FontWeight="DemiBold"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock
                        Foreground="{DynamicResource MahApps.Brushes.Gray5}"
                        Background="{DynamicResource MahApps.Brushes.Gray8}"
                        Padding="5,5"
                        FontStyle="Italic"
                        TextAlignment="Right"
                        Text="Click the Edit Arguments button to start adding arguments --> "
                        Visibility="{Binding HasArguments, Converter={StaticResource VisibleIfNot}}"/>
                </Grid>
            </Border>
            <Border
                Visibility="{Binding IsEditing, Converter={StaticResource VisibleIf}}"
                Grid.Column="1"
                Padding="5,5"
                Background="{DynamicResource MahApps.Brushes.Accent3}"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                BorderThickness="1">
                <StackPanel Orientation="Vertical">
                    <TextBlock
                        Margin="0,0,0,5"
                        Text="Enter arguments, one per line. Launchpad takes care of quoting if needed. Beware empty lines."/>
                    <TextBox
                        MinLines="4"
                        MaxLines="10"
                        AcceptsReturn="True"
                        Text="{Binding ArgumentsAsLines, Mode=TwoWay}"/>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</UserControl>
