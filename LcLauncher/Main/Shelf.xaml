<UserControl
    x:Class="LcLauncher.Main.Shelf"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:LcLauncher.Main"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    mc:Ignorable="d" 
    d:DataContext="{d:DesignInstance local:ShelfViewModel, IsDesignTimeCreatable=False}"
    d:DesignHeight="450" d:DesignWidth="800" DataContextChanged="Shelf_DataContextChanged">
    <StackPanel Orientation="Vertical">
        <!-- Shelf header -->
        <DockPanel
            Background="{DynamicResource MahApps.Brushes.Accent}"
            Margin="2,10,2,2">
            <Label
                DockPanel.Dock="Left"
                Padding="10,0">
                Shelf title
            </Label>
            <Grid/> <!-- Spacer -->
        </DockPanel>
        <WrapPanel>
            <Border
                Margin="2,2"
                BorderThickness="0"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                Background="{DynamicResource MahApps.Brushes.Accent4}"
                Width="100" Height="100"
                >
            </Border>
            <Border
                Margin="2,2"
                BorderThickness="0"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                Background="{DynamicResource MahApps.Brushes.Accent4}"
                Width="100" Height="100"
                >
            </Border>
            <Border
                Margin="2,2"
                BorderThickness="0"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                Background="{DynamicResource MahApps.Brushes.Accent4}"
                Width="100" Height="100"
                >
            </Border>
            <Border
                Margin="2,2"
                BorderThickness="0"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                Background="{DynamicResource MahApps.Brushes.Accent4}"
                Width="100" Height="100"
                >
            </Border>
            <Border
                Margin="2,2"
                BorderThickness="0"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                Background="{DynamicResource MahApps.Brushes.Accent4}"
                Width="100" Height="100"
                >
            </Border>
            <Border
                Margin="2,2"
                BorderThickness="0"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                Background="{DynamicResource MahApps.Brushes.Accent4}"
                Width="100" Height="100"
                >
            </Border>
        </WrapPanel>
        <StackPanel Orientation="Horizontal">
            <Button Command="{Binding SetThemeCommand}" CommandParameter="Dark.Olive">
                Olive
            </Button>
            <Button Command="{Binding SetThemeCommand}" CommandParameter="Dark.Indigo">
                Indigo
            </Button>
            <Button Command="{Binding SetThemeCommand}" CommandParameter="Dark.Mauve">
                Mauve
            </Button>
            <Button Command="{Binding SetThemeCommand}" CommandParameter="Dark.Sienna">
                Sienna
            </Button>
            <Button Command="{Binding SetThemeCommand}" CommandParameter="Dark.Taupe">
                Taupe
            </Button>
            <Button Command="{Binding SetThemeCommand}" CommandParameter="Dark.Amber">
                Amber
            </Button>
            <Button Command="{Binding SetThemeCommand}" CommandParameter="Dark.Crimson">
                Crimson
            </Button>
            <Button Command="{Binding SetThemeCommand}" CommandParameter="Dark.Brown">
                Brown
            </Button>
            <Button Command="{Binding SetThemeCommand}" CommandParameter="Dark.Steel">
                Steel
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
