<UserControl
    x:Class="LcLauncher.Main.Shelf"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:LcLauncher.Main"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    mc:Ignorable="d" 
    d:DataContext="{d:DesignInstance local:ShelfViewModel, IsDesignTimeCreatable=False}"
    d:DesignHeight="450" d:DesignWidth="800" DataContextChanged="Shelf_DataContextChanged">
    <StackPanel Orientation="Vertical">
        <Label>Shelf title</Label>
        <WrapPanel>
            <Border
                Margin="2,2"
                BorderThickness="0"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                Background="{DynamicResource MahApps.Brushes.Accent4}"
                Width="100" Height="100"
                >
            </Border>
            <Border
                Margin="2,2"
                BorderThickness="0"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                Background="{DynamicResource MahApps.Brushes.Accent4}"
                Width="100" Height="100"
                >
            </Border>
            <Border
                Margin="2,2"
                BorderThickness="0"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                Background="{DynamicResource MahApps.Brushes.Accent4}"
                Width="100" Height="100"
                >
            </Border>
            <Border
                Margin="2,2"
                BorderThickness="0"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                Background="{DynamicResource MahApps.Brushes.Accent4}"
                Width="100" Height="100"
                >
            </Border>
            <Border
                Margin="2,2"
                BorderThickness="0"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                Background="{DynamicResource MahApps.Brushes.Accent4}"
                Width="100" Height="100"
                >
            </Border>
            <Border
                Margin="2,2"
                BorderThickness="0"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                Background="{DynamicResource MahApps.Brushes.Accent4}"
                Width="100" Height="100"
                >
            </Border>
        </WrapPanel>
        <StackPanel Orientation="Horizontal">
            <Button Command="{Binding SetThemeCommand}" CommandParameter="Dark.Amber">
                Amber
            </Button>
            <Button Command="{Binding SetThemeCommand}" CommandParameter="Dark.Olive">
                Olive
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
