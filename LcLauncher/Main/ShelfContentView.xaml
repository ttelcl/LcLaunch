<UserControl
    x:Class="LcLauncher.Main.ShelfContentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:LcLauncher.Main"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance local:ShelfContentViewModel, IsDesignTimeCreatable=False}"
    d:DesignHeight="450" d:DesignWidth="800">
    <Border
        Padding="0,2,0,2"
        BorderThickness="0,0,0,1"
        BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
        >
        <WrapPanel>
            <Border
                Margin="2,2"
                BorderThickness="0"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                Background="{DynamicResource MahApps.Brushes.Accent4}"
                Width="100" Height="100"
                >
            </Border>
            <Border
                Margin="2,2"
                BorderThickness="0"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                Background="{DynamicResource MahApps.Brushes.Accent4}"
                Width="100" Height="100"
                >
            </Border>
            <Border
                Margin="2,2"
                BorderThickness="0"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                Background="{DynamicResource MahApps.Brushes.Accent4}"
                Width="100" Height="100"
                >
            </Border>
            <Border
                Margin="2,2"
                BorderThickness="0"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                Background="{DynamicResource MahApps.Brushes.Accent4}"
                Width="100" Height="100"
                >
            </Border>
            <Border
                Margin="2,2"
                BorderThickness="0"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                Background="{DynamicResource MahApps.Brushes.Accent4}"
                Width="100" Height="100"
                >
            </Border>
            <Border
                Margin="2,2"
                BorderThickness="0"
                BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                Background="{DynamicResource MahApps.Brushes.Accent4}"
                Width="100" Height="100"
                >
            </Border>
        </WrapPanel>
    </Border>
</UserControl>
