<UserControl
    x:Class="LcLauncher.Main.EditorBaseView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:LcLauncher.Main"
    xmlns:rack="clr-namespace:LcLauncher.Main.Rack"
    xmlns:tile="clr-namespace:LcLauncher.Main.Rack.Tile"
    xmlns:edit="clr-namespace:LcLauncher.Main.Rack.Editors"
    xmlns:apps="clr-namespace:LcLauncher.Main.AppPicker"
    mc:Ignorable="d" 
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    DataContextChanged="EditorBaseView_DataContextChanged"    
    d:DataContext="{d:DesignInstance local:EditorViewModelBase, IsDesignTimeCreatable=False}"
    Background="{DynamicResource MahApps.Brushes.Gray9}"
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding HorizontalMargin}"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="{Binding HorizontalMargin}"/>
        </Grid.ColumnDefinitions>
        <DockPanel
            Grid.Row="1" Grid.Column="1"
            Background="{DynamicResource MahApps.Brushes.Control.Background}">
            <DockPanel
                Background="{DynamicResource MahApps.Brushes.Accent}"
                DockPanel.Dock="Bottom">
                <Button
                    Content="OK"
                    DockPanel.Dock="Right"
                    Margin="10,5"
                    MinWidth="100"
                    FontSize="14"
                    Command="{Binding AcceptCommand}"/>
                <Button
                    Content="Cancel"
                    DockPanel.Dock="Right"
                    Margin="10,5"
                    MinWidth="100"
                    IsCancel="True"
                    FontSize="14"
                    Command="{Binding CancelCommand}"/>
                <StackPanel/> <!-- filler -->
            </DockPanel>
            <GroupBox>
                <GroupBox.Header>
                    <DockPanel>
                        <TextBlock
                            DockPanel.Dock="Left"
                            Text="{Binding EditorTitle}"/>
                        <TextBlock
                            DockPanel.Dock="Right"
                            Margin="0,0,20,0"
                            FontStyle="Italic"
                            Text="{Binding TargetTitle}"/>
                        <Grid/>
                    </DockPanel>
                </GroupBox.Header>
                <ContentControl Content="{Binding}" MinHeight="200">
                    <ContentControl.Resources>
                        <DataTemplate DataType="{x:Type edit:ShelfEditViewModel}">
                            <rack:ShelfEditView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type edit:LaunchEditViewModel}">
                            <edit:LaunchEditView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type edit:GroupEditViewModel}">
                            <edit:GroupEditView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type apps:AppSelectorViewModel}">
                            <apps:AppSelectorView/>
                        </DataTemplate>
                    </ContentControl.Resources>
                </ContentControl>
            </GroupBox>
        </DockPanel>
    </Grid>
</UserControl>
