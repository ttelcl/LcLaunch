<UserControl
    x:Class="LcLauncher.Main.AppPicker.AppSelectorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:LcLauncher.Main.AppPicker"
    mc:Ignorable="d" 
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    d:DataContext="{d:DesignInstance local:AppSelectorViewModel, IsDesignTimeCreatable=False}"
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <!-- Filter Buttons and Text Filter -->
            <ItemsControl
                DockPanel.Dock="Right"
                ItemsSource="{Binding Categories}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ToggleButton
                            DataContext="{Binding}"
                            IsChecked="{Binding IsSelected}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Label}" Margin="2,0"/>
                                <TextBlock Text="{Binding FilterCountText}" Width="24"/>
                            </StackPanel>
                        </ToggleButton>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <TextBlock Text="Filter: " VerticalAlignment="Center"/>
            <TextBox
                Text="{Binding FilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                mah:TextBoxHelper.ClearTextButton="True"
                mah:TextBoxHelper.Watermark="Filter"/>
        </DockPanel>
        <ListBox
            Grid.Row="1"
            Margin="0,10,0,0"
            MinHeight="400"
            Height="580"
            ItemsSource="{Binding ApplicationsView}">
            <!--<ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>-->
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:AppView DataContext="{Binding}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Border
            Grid.Row="2"
            MinHeight="80"
            BorderThickness="0"
            Margin="5,0,5,0"
            Background="{DynamicResource MahApps.Brushes.Accent4}"
            BorderBrush="{DynamicResource MahApps.Brushes.Accent}">
            
        </Border>
    </Grid>
</UserControl>
